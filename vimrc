syntax on

" search stuff
set ignorecase
set hlsearch

" spacing and stuff
set shiftwidth=4
set tabstop=4
set softtabstop=4
set autoindent
set expandtab

" misc
set nowrap
set backspace+=start,eol,indent
set noswapfile

" other progs
set tags=./tags,./../tags,./../../tags,./../../../tags,./../../../../tags,./../../../../../tags

" appearance
set statusline=[TYPE=%Y]\ [POS=%04l,%04v][%p%%]\ [LEN=%L]
set laststatus=2 

